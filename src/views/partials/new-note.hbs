<section id="comentarios" class="bg-light-grey">
  <div class="container">
    <div class="content-center">
       <h3>Comentarios</h3>
       <form action="/notes/new-note" method="POST">

            <div class="form-group">
              <input type="text" class="form-control" name="name" placeholder="Nombre">

            </div>
            <div class="form-group">
              <textarea name="description" class="form-control" placeholder="Description"></textarea>
            </div>

            <div class="form-group">
              <input type="text" class="form-control" name="email" placeholder="Email">
            </div>

            <div class="form-group"></div>
            <button class="btn btn-success" id="btn-comment">

              <i class="fa fa-comment"></i>Publicar
            </button>
        </div>
        </form>
        
    </div>
    <ul class="list-group p-4">
      {{#each notes}}
      <li class="list-group-item">


        <div>
          <a href="" class="col text-center">
            <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" alt="">
          </a>
          <blockquote class="col">
            <p class="lead">{{description}}</p>

          </blockquote>
          <footer>
            {{name}}, {{updatedAt}}
          </footer>
        </div>
      </li>
      {{/each}}
    </ul>

  </div>

</section>



